<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.BienvenidaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <fragment
            android:id="@+id/frg_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.example.nutrikids.fragmentos.MenuFragment"
            tools:layout="@layout/fragment_menu"/>
        <TextView
            android:id="@+id/bie_lbl_saludo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/bie_lbl_saludo"
            android:gravity="center"
            android:layout_weight="2"
            android:layout_marginTop="50dp"
            android:textSize="25sp"/>

        <ImageView
            android:layout_width="328dp"
            android:layout_height="391dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="35dp"
            android:src="@drawable/img_bienvenido" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>